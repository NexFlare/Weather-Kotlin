<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_card"
    android:padding="10dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp"
    android:weightSum="7"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="MONDAY"
        android:id="@+id/dailyDayTv"
        android:layout_gravity="center"
        android:fontFamily="@font/muli_semibold"
        android:textSize="18dp"
        android:textColor="@android:color/black"
        android:gravity="center"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="35"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/muli_semibold"
            android:id="@+id/tempLabel"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\u00B0"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:layout_alignTop="@+id/tempLabel"
            android:layout_toRightOf="@+id/tempLabel"
            android:layout_toEndOf="@+id/tempLabel"/>
    </RelativeLayout>
    <com.github.pwittchen.weathericonview.WeatherIconView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        custom:weatherIconResource="@string/wi_rain"
        custom:weatherIconSize="30"
        android:layout_weight="2"
        android:gravity="center"
        android:id="@+id/dailyIconIv"
        android:layout_gravity="center"/>

</LinearLayout>
